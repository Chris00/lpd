#!/bin/sh

SRC_WEB=web
WEB=lpd.forge.ocamlcore.org:/home/groups/lpd/htdocs

if [ -d doc ] ; then
    scp -r doc/ $WEB	&& echo "*** Published documentation on OCamlForge"
fi
FILES="$SRC_WEB/*.html $SRC_WEB/*.css"
if [ "$1" = "--all" ]; then
    FILES="$FILES $SRC_WEB/*.jpg LICENSE"
fi
if [ -d "$SRC_WEB" ]; then
    scp $FILES $WEB && echo "*** Published web site ($SRC_WEB/) on OCamlForge"
fi
